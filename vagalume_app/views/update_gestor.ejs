<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> Todos os gestores</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Alterar Gestor</h2>
                <span class="text-light">Use o formul√°rio abaixo para alterar um gestor</span>
            </div>
            <!-- form handling -->
            <form method="POST" id="update_gestor">
                <div class="nova_camera">
                    <div class="form-group">
                        <label for="nome" class="text-light">Nome</label>
                        <input type="hidden" name="id" value="<%= gestor._id %>">
                        <input type="text" name="nome" value="<%= gestor.nome %>" placeholder="Digite o nome..."> 
                    </div>
                    <div class="form-group">
                        <label for="cpf" class="text-light">CPF</label>
                        <input type="text" name="cpf" value="<%= gestor.cpf %>" placeholder="Digite o CPF...">
                    </div>
                    <div class="form-group">
                        <label for="email" class="text-light">Email</label>
                        <input type="text" name="email" value="<%= gestor.email %>" placeholder="Digite o Email..." >
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Salvar</button>
                    </div>
                </div>
            </form>


        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->