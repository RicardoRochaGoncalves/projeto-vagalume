<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> Todas as Cameras</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Alterar Camera</h2>
                <span class="text-light">Use o formulário abaixo para alterar uma camera</span>
            </div>
            <!-- form handling -->
            <form method="POST" id="update_camera">
                <div class="nova_camera">
                    <div class="form-group">
                        <label for="ip" class="text-light">IP</label>
                        <input type="hidden" name="id" value="<%= camera._id %>">
                        <input type="text" name="ip" value="<%= camera.ip %>" placeholder="192.168.1.100"> 
                    </div>
                    <div class="form-group">
                        <label for="user" class="text-light">User</label>
                        <input type="text" name="user" value="<%= camera.user %>" placeholder="admin">
                    </div>
                    <div class="form-group">
                        <label for="senha" class="text-light">Senha</label>
                        <input type="text" name="senha" value="<%= camera.senha %>" placeholder="*****" >
                    </div>
                    <div class="form-group">
                        <label for="modelo" class="text-light">Modelo</label>
                        <input type="text" name="modelo" value="<%= camera.modelo %>" placeholder="ABC">
                    </div>
                    <div class="form-group">
                        <label for="datainstalacao" class="text-light">Data da instalação</label>
                        <input type="text" name="datainstalacao" value="<%= camera.datainstalacao %>" placeholder="21/01/2021">
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Salvar</button>
                    </div>
                </div>
            </form>


        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->