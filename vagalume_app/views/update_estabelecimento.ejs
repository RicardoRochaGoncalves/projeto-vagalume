<!-- include header -->
<%- include('include/_header') %>
    <!-- /include header -->

    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <div class="filter">
                    <a href="/"><i class="fas fa-angle-double-left"></i> Todos os estabelecimentos</a>
                </div>
            </div>
            <div class="form-title text-center">
                <h2 class="text-dark">Alterar Estabelecimento</h2>
                <span class="text-light">Use o formulário abaixo para alterar um estabelecimento</span>
            </div>
            <!-- form handling -->
            <form method="POST" id="update_estabelecimento">
                <div class="nova_camera">
                    <div class="form-group">
                        <label for="nome" class="text-light">Nome</label>
                        <input type="hidden" name="id" value="<%= estabelecimento._id %>">
                        <input type="text" name="nome" value="<%= estabelecimento.nome %>" placeholder="Digite o nome..."> 
                    </div>
                    <div class="form-group">
                        <label for="endereco" class="text-light">Endereço</label>
                        <input type="text" name="endereco" value="<%= estabelecimento.endereco %>" placeholder="Digite o Endereço...">
                    </div>
                    <div class="form-group">
                        <label for="categoria" class="text-light">Categoria</label>
                        <input type="text" name="categoria" value="<%= estabelecimento.categoria %>" placeholder="Digite a Categoria..." >
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn text-dark update">Salvar</button>
                    </div>
                </div>
            </form>


        </div>
    </main>
    <!-- /Main Site -->

    <!-- include footer -->
    <%- include('include/_footer') %>
        <!-- /include footer -->