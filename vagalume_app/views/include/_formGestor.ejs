<!-- form handling -->
<form action="/api/gestores" method="POST" id="add_gestor">
    <div class="nova_camera">
        <div class="form-group">
            <label for="nome" class="text-light">Nome</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nome" value="" placeholder="Digite o nome...">
        </div>
        <div class="form-group">
            <label for="cpf" class="text-light">CPF</label>
            <input type="text" name="cpf" value="" placeholder="Digite o CPF...">
        </div>
        <div class="form-group">
            <label for="email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="Digite o Email...">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
    </div>
</form>