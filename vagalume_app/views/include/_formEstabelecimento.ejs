<!-- form handling -->
<form action="/api/estabelecimentos" method="POST" id="add_estabelecimento">
    <div class="nova_camera">
        <div class="form-group">
            <label for="nome" class="text-light">Nome</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nome" value="" placeholder="Digite o nome...">
        </div>
        <div class="form-group">
            <label for="endereco" class="text-light">Endereço</label>
            <input type="text" name="endereco" value="" placeholder="Digite o endereço...">
        </div>
        <div class="form-group">
            <label for="categoria" class="text-light">Categoria</label>
            <input type="text" name="categoria" value="" placeholder="Digite a categoria...">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Salvar</button>
        </div>
    </div>
</form>